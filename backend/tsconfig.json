{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "CommonJS",
        "lib": [
            "ES2017",
            "DOM",
        ],
        "target": "es2017",
        "allowJs": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node"
    },
    "include": [
        "*.ts"
    ]
}
